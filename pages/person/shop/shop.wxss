.container_content{
    margin-top: 10rpx;
}

.row{
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    line-height: 43rpx;
}

.title{
    margin-left: 20rpx;
    font-family:Georgia, 'Times New Roman', Times, serif;
