.Container{
    display: flex;
    flex-direction: column;
    background-color:whitesmoke;
    min-height: 300px;
    width: 100%;
    border-bottom-left-radius: 10%;
    border-bottom-right-radius: 10%;
}

.container_button{
    position: relative;
    display: flex;
    flex-direction: row;
    text-align: center;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100%;
}

.button{
    display: flex;
    position: relative;
    background-color:black;
    width: 50%;
    height: 100%;
    text-align: center;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 35rpx;
    align-items: center;
    justify-content: center;
}

.container_box{
   display: flex;
   position: relative;
   flex-direction: column;
   margin-bottom: 40rpx;
}

.box{
    overflow: hidden;
    display: flex;
    margin-left: 10%;
    margin-top: 40rpx;
    width: 80%;
    height: 230rpx;
    background-color:white;
    border-radius: 20%;
    border-radius: 25rpx;
    background: linear-gradient(145deg, #fbfbfb, #e7e7e7);
    box-shadow:  20rpx 20rpx 40rpx #dbdbdb,
                 -20rpx -20rpx 40rpx #fbfbfb;
}

.container_choose_button{
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 20%;

  margin-left: 10%;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.choose_button{
  display: flex;
  background-color: rgb(1, 65, 65);
  opacity: 50%;
  color: white;
  margin-left: 1orpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  width: 25%;
  height: 60rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.active{
    background-color: rgb(2, 22, 22);
    border: blue 20rpx;
    transition: 1s ease-in;
    opacity: 100%;
}

.status_show{
    display: flex;
    position: relative;
    height: 100%;
    width: 4%;

}

