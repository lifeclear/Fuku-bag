  width: 75%;

}

.task_money{
  position: relative;
  text-align: center;
  font-size: 20px;
  border-radius: 10px;
  width: 60px;
  height: 20px;
  background-color: rgb(255, 255, 255);
  margin-left: 20%;
  margin-right: 4%;
  margin-top: 2%;
  font-family:fantasy;
}

.task_kind{
  margin-top: 10px;
  margin-bottom: 3px;
}

.task_info{
  margin-bottom: 3px;
}
.task_info h1{
  color:rgb(151, 60, 0);
  font-family: Georgia, 'Times New Roman', Times, serif;
}

.task_kind h1{
  color:rgb(151, 60, 0);
  font-family: Georgia, 'Times New Roman', Times, serif;
}


.line{
  display: flex;
  position:relative;
  margin-top: 20px;
  background-color: white;
  height: 1px;
}

.task_choice{
  display:flex;
  flex-direction: row;
  height: 30px;
}

.task_time{
  display: inline;
  margin-top:3%;
  width: 120px;
  margin-left: 10%;
