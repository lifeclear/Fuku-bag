 /* 按钮及文章部分 SRTART */
.button-container{
  display: flex;
  flex-direction: row;
}

.button-container .title{
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  height: 30px;
  width: 33.3%;
}

.button-container .title .active{
    position: relative;
    display:flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    color: black;
    border-top-left-radius: var(--main-border-ulradius);
    border-top-right-radius: var(--main-border-urradius);
    border-bottom-right-radius: var(--main-border-drradius);
    background-color: var(--main-botton-color);
}

.button-container .title .inactive{
    position: relative;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    background-color:rgba(0, 0, 0, 0.562);
    color: white;
}

.line{
    height: 100px;
    width: 100%;
    background-color: black;
}
 
.content{
  display: flex;
  padding-bottom: 100px;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
  width: 100%;
  background-color:var(--main-botton-color);
}
 /* 按钮及文章部分 END */

