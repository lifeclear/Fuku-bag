 /* 悬赏列表部分 START */
 .task_list{
  position: relative;
  margin-top: 8%;
  width: 100%;
  left: 10%;
}
.box{
    display: flex;
    flex-direction: column;
    margin-bottom: 40px;
    min-height: 220px;
    width: 80%;
    border-radius: 15px;
    background: linear-gradient(145deg, #fbfbfb, #e7e7e7);
    box-shadow:  7px 7px 14px #dbdbdb,
                 -7px -7px 14px #fbfbfb;
}

.img_box{ 
  position: relative;
  display: flex;
  flex-direction: row;
  position: relative;
  margin-top: 15px;
  height: 20px;
}
.img{
  position: relative;
  margin-left: 10%;
  border-radius: 100%;
  height: 50px;
  width: 50px;
  font-size: larger;
}
.user_name{
  font-size: 28px;
  margin-left: 5px;
  width: 60px;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.task_content{
  position: relative;
  margin-top: 10%;
