page{
  background-color:white;
}

.task_list{
  position: relative;
  top: 70px;
  left: 10%;
}
.box{
    display: flex;
    flex-direction: column;
    margin-bottom: 40px;
    height: 200px;
    width: 80%;
    border-radius: 15px;
    background: linear-gradient(145deg, #fbfbfb, #e7e7e7);
    box-shadow:  7px 7px 14px #dbdbdb,
                 -7px -7px 14px #fbfbfb;
}

.img_box{ 
  position: relative;
  display: flex;
  flex-direction: row;
  position: relative;
  margin-top: 15px;
  height: 20px;
}
.img{
  position: relative;
  margin-left: 10%;
  border-radius: 100%;
  height: 30px;
  width: 30px;
  font-size: larger;
}
.user_name{
  font-size: 28px;
  margin-left: 5px;
  width: 60px;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.task_content{
  position: relative;
  margin-top: 10%;
  margin-left: 10%;
  height: 40%;
  width: 75%;

}

.task_money{
  position: relative;
  text-align: center;
  font-size: 20px;
  border-radius: 10px;
  width: 60px;
  height: 20px;
  background-color: rgb(255, 255, 255);
  margin-left: 20%;
  margin-right: 4%;
  margin-top: 2%;
  font-family:fantasy;
}

.task_kind{
  margin-top: 10px;
  margin-bottom: 3px;
}

.task_info{
  margin-bottom: 3px;
}
.task_info h1{
  color:rgb(151, 60, 0);
  font-family: Georgia, 'Times New Roman', Times, serif;
}

.task_kind h1{
  color:rgb(151, 60, 0);
  font-family: Georgia, 'Times New Roman', Times, serif;
}


.line{
  display: flex;
  position:relative;
  margin-top: 20px;
  background-color: white;
  height: 1px;
}

.task_choice{
  display:flex;
  flex-direction: row;
  height: 30px;
}

.task_time{
  display: inline;
  margin-top:3%;
  width: 120px;
  margin-left: 10%;
  font-size: 14px;
  color:rgb(141, 84, 84);
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.task_more_info{
  background-color:black;
  color: white;
  border-radius: 10px;
  text-align: center;
  width: 100px;
  margin-top:3%;
  padding-top: 2px;
  font-size: 14px;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.task_content h3{
  color:black;
}

